<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>IBMHack</title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/defectdetection.css">
    </head>
    <body>
        <nav class="navbar bg-body-tertiary" data-bs-theme="dark" style="width: 100%;">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Defect Detection API</a>
              <a class="navbar-brand" href="">IBM SkillsBuild</a>
            </div>
        </nav>

        <main class="main">
            <div class="container-fluid">
                <div class="row center-element center" style="">
                    <div class="card card-defect " style="width:80%;">
                        <!-- api import -->
                        <div class="center"style="width:15%;height:50px;position: relative;top:85%;background-color: gray;">
                            <h3 style="margin-top: 10px;">ðŸš€ Import API</h3>
                        </div>
                        <!-- card-input -->
                        <label for="" class="drop-container">
                            <input type="file" name="file" id="files" multiple>
                        </label>
                        <!-- card-aspect -->
                        <div class="card card-aspect center" style="width:30%;">
                            <!-- confidence -->
                            <div style="width: 80%;height:50px;position: relative;bottom:10%;">
                                <label for="slidecontainer1"><b>Confidence: </b><span id="conf-val"></span>%</label>
                                <div class="slidecontainer1">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="range1">
                                </div>
                            </div>
                            <!-- overlap -->
                            <div style="width: 80%;height:50px;position: relative;">
                                <label for="slidecontainer2"><b>Overlap: </b><span id="overlap-val"></span>%</label>
                                <div class="slidecontainer2">
                                    <input type="range" min="1" max="100" value="50" class="slider" id="range2">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <footer>
            <nav class="navbar fixed-bottom bg-body-tertiary" data-bs-theme="dark">
                <div class="container-fluid">
                  <a class="navbar-brand" href="#"><span style="font-size: 15px;">By</span> Amey Agarwal</a>
                  <a class="navbar-brand" href="#"><span style="font-size: 15px;">In Collaboration With</span> IBM</a>
                </div>
              </nav>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
    </body>

    <script>
        var slider1 = document.getElementById("range1")
        var slider2 = document.getElementById("range2")

        var output1 = document.getElementById("conf-val")
        var output2 = document.getElementById("overlap-val")

        output1.innerHTML = slider1.value;
        output2.innerHTML = slider2.value;

        slider1.oninput = function(){
            output1.innerHTML = this.value
        }

        slider2.oninput = function(){
            output2.innerHTML = this.value;
        }

    </script>
</html>